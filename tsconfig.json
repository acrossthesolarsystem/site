{
  // SECTION Typescript Compiler Options
  "compilerOptions": {
    // SETTINGS Output

    // SETTINGS Declarations & Source Maps
    "declaration": true,                      // SETTING Emit Declaration (.d.ts) files - Recommended value: true
    "declarationMap": true,                   // SETTING Emit Declaration Map (.d.ts.map) files - Recommended value: true
    "sourceMap": true,                        // SETTING Emit Source Map (.js.map) - Recommended value: true
    "stripInternal": true,                    // SETTING Strip @internals from Declaration - Recommended value: true
    // !SETTINGS

    // SETTINGS File Locations
    "rootDir": "./src",                       // SETTING Input (Root) Directory
    "outDir": "./dist",                       // SETTING Output Directory
    "declarationDir": "./d",                  // SETTING Declaration Directory
    "mapRoot": "./dist",                      // SETTING Source Map Directory (For Debuggers)
    "sourceRoot": "./src",                    // SETTING Source Code Directory (For Debuggers)
    // !SETTINGS

    "module": "CommonJS",                     // SETTING Module Resolution - Recommended value: Depends on your use case
    "removeComments": true,                   // SETTING Remove Comments - Recommended value: true
    "resolveJsonModule": true,                // SETTING Resolve JSON - Recommended value: true
    // !SETTINGS

    // SETTINGS Strict
    "strict": false,                          // SETTING Enable all strict type checking options - Recommended value: true
    "strictBindCallApply": false,             // SETTING Check that bind/call/apply methods match the original function - Recommended value: true
    "strictFunctionTypes": false,             // SETTING When assigning functions, check to ensure parameters and the return values are subtype-compatible. - Recommended value: true
    "strictPropertyInitialization": false,    // SETTING Check for proprieties that are declared but not defined in the constructor - Recommended value: true
    "strictNullChecks": false,                // SETTING When type checking, take `null`/`undefined` into account
    "alwaysStrict": true,                     // SETTING Always add "use strict" to files
    // !SETTINGS

    // SETTING Emit Decorator Meta
    "experimentalDecorators": false,          // SETTING Enable Experimental Decorators
    "emitDecoratorMetadata": false,           // SETTING Emit Decorator Metadata
    
    // SETTINGS Code-smell 
    "allowUnreachableCode": false,            // SETTING Allow Unreachable Code/Dead Code - Recommended value: false
    "allowSyntheticDefaultImports": false,    // SETTING Allow import x from y when y has no default export - Recommended value: false
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    // !SETTINGS

    // SETTINGS React
    "jsx": "preserve",                        // SETTING Do JSX
    "jsxFactory": "h",
    // !SETTINGS

    "diagnostics": false,                     // SETTING Log TS Diagnostics
  },
  // !SECTION
}

// SOURCE https://github.com/0J3/TSTemplate/blob/main/tsconfig.json